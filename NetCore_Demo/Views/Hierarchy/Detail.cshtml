@model NetCore_Demo.Models.HierarchyDetailViewModel;
@{
    ViewData["Title"] = "DetailPage of ";
}



<div id="assets">
    <h1>@ViewData["Title"] @Model.FirstName @Model.LastName</h1>
    <div id="assetsTable">
        <table class="table table-condensed" id="catalogIndexTable">
            <thead>
            <th>
                Id
            </th>
            <th>
                First name
            </th>
            <th>
                Last name
            </th>
            <th>
                Address
            </th>
            <th>
                Telephone Number
            </th>
            <th>
                Children
            </th>
            <th>
                Edit
            </th>
            </thead>
            <tbody>
                    <tr class="assetRow">
                        <td class="">
                            <p>@Model.Id</p>
                        </td>
                        <td class="">
                            <p>@Model.FirstName</p>
                        </td>
                        <td class="">
                            <p>@Model.LastName</p>
                        </td>
                        <td class="">
                            <p>@Model.Address</p>
                        </td>
                        <td class="">
                            <p>@Model.TelephoneNumber</p>
                        </td>
                        <td class="">
                            <ul>
                                @foreach (var child in Model.children)
                                {
                                    <li>@child.FirstName</li>
                                }
                            </ul>
                        </td>
                        <td>
                            <a role="button" class="btn btn-primary" asp-action="Edit" asp-controller="Hierarchy" asp-route-id="@Model.Id">Edit</a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>

